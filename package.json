{
  "name": "@light-merlin-dark/vssh",
  "version": "1.4.0",
  "description": "Model Context Protocol (MCP) enabled SSH proxy with plugin architecture for AI assistants",
  "main": "dist/index.js",
  "bin": {
    "vssh": "dist/index.js",
    "vssh-mcp": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "vitest run tests/unit tests/integration",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:plugins": "vitest run tests/integration/plugin-test-runner.test.ts",
    "test:plugin": "node scripts/test-plugin.js",
    "test:all": "npm test && npm run test:plugins",
    "test:old": "npm run test:guard && npm run test:old-plugins",
    "test:guard": "ts-node tests/test-guard.ts",
    "test:old-plugins": "ts-node tests/test-plugins.ts",
    "test:mcp": "npm run build && ts-node tests/test-mcp.ts",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit",
    "start:mcp": "node dist/mcp-server.js"
  },
  "keywords": [
    "ssh",
    "ai-tools",
    "claude-code",
    "cli",
    "safety",
    "proxy",
    "remote-execution",
    "command-guard",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Merlin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/light-merlin-dark/vssh.git"
  },
  "homepage": "https://github.com/light-merlin-dark/vssh#readme",
  "bugs": {
    "url": "https://github.com/light-merlin-dark/vssh/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "chalk": "^5.3.0",
    "ssh2": "^1.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/ssh2": "^1.11.18",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
